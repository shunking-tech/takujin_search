%main
  .container.p-5

    = link_to 'メンバーの検索条件を絞る', '#form-teams-search', class: "btn btn-info", 'data-toggle': :collapse, 'role': :button, 'aria-expanded': :false, 'aria-controls': :collapseExample

    .collapse#form-teams-search

      = form_with model: @member, url: members_path, method: "get", local: true, class: "mt-4" do |f|

        = render 'members/form-members-search', f: f

        = f.submit 'メンバー検索条件を設定'


  .container

    - @members.each do |m|
      = render 'member', member: m
